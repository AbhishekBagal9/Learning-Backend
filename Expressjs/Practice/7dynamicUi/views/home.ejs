<%- include('partials/head') %>
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('partials/navbar') %>

  <div class="max-w-3xl mx-auto mt-16 p-8 bg-white shadow-2xl rounded-2xl">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-indigo-600 mb-6">Welcome to Airbnb</h1>
      <ul class="grid grid-cols-2 gap-6 list-none">
  <% registeredHomes.forEach((home) => { %>
    <li class="flex flex-col justify-between h-[220px] w-[300px] p-5 border border-gray-200 rounded-2xl shadow-xl hover:shadow-2xl hover:bg-indigo-50 transition-all duration-300 space-y-3">
      <div class="text-2xl font-semibold text-indigo-600 flex items-center gap-2">
        🏠 <span><%= home.addhome %></span>
      </div>
      <div class="text-gray-700 text-base">
        💰 <span class="font-medium">Price:</span> <%= home.price %>
      </div>
      <div class="text-gray-700 text-base">
        📍 <span class="font-medium">Location:</span> <%= home.location %>
      </div>
    </li>
  <% }) %>
</ul>
 </div>
  </div>

</body>
</html>
