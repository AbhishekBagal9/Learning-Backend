<%- include('partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('partials/navbar') %>

  <div class="flex justify-center items-center pt-10">
    <div class="w-full max-w-lg bg-white shadow-2xl rounded-lg p-8">
      <h1 class="text-3xl font-bold text-center text-orange-600 mb-6">
        Register Your Home on Airrnb
      </h1>

      <form action="/addhome" method="POST" class="flex flex-col gap-5">
        <!-- Home Name -->
        <div>
          <label for="homename" class="block text-gray-700 font-medium mb-1">Home Name:</label>
          <input type="text" name="addhome" id="homename" placeholder="Add your home"
                 class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-400"
                 required>
        </div>

        <!-- Price -->
        <div>
          <label for="price" class="block text-gray-700 font-medium mb-1">Price per Night:</label>
          <input type="text" name="price" id="price" placeholder="Add your price"
                 class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-400"
                 required>
        </div>

        <!-- Location -->
        <div>
          <label for="location" class="block text-gray-700 font-medium mb-1">Location:</label>
          <input type="text" name="location" id="location" placeholder="Add your location"
                 class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-400"
                 required>
        </div>

        <!-- Submit -->
        <div class="text-center">
          <input type="submit" value="Add Home"
                 class="bg-blue-600 hover:bg-blue-700 transition text-white px-6 py-3 rounded-lg shadow cursor-pointer font-semibold">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
