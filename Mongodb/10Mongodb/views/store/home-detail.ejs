<%- include('../partials/head.ejs') %>
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar.ejs') %>

    <div class="max-w-4xl mx-auto mt-16 px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
            <!-- Image Section -->
            <div class="h-96 w-full overflow-hidden">
                <img src="<%= home.imageUrl %>" 
                     alt="<%= home.addhome %>" 
                     class="w-full h-full object-cover">
            </div>

            <!-- Content Section -->
            <div class="p-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">
                    <%= home.addhome %>
                </h1>

                <!-- Price and Location -->
                <div class="space-y-4 mb-6">
                    <p class="flex items-center text-xl text-gray-700">
                        <i class="fas fa-tag mr-3 text-indigo-600"></i>
                        <span class="font-semibold">Price:</span>
                        <span class="ml-2">₹<%= home.price %></span>
                    </p>
                    <p class="flex items-center text-xl text-gray-700">
                        <i class="fas fa-location-dot mr-3 text-indigo-600"></i>
                        <span class="font-semibold">Location:</span>
                        <span class="ml-2"><%= home.location %></span>
                    </p>
                </div>

                <!-- Rating -->
                <div class="flex items-center mb-6">
                    <div class="flex items-center text-yellow-400 text-2xl">
                        <% const rating = Number(home.rating) || 0;
                           const fullStars = Math.floor(rating);
                           const emptyStars = 5 - fullStars; %>

                        <% for(let i = 0; i < fullStars; i++) { %>
                            <span>★</span>
                        <% } %>
                        <% for(let i = 0; i < emptyStars; i++) { %>
                            <span>☆</span>
                        <% } %>
                    </div>
                    <span class="ml-2 text-gray-600 text-lg">
                        <%= rating.toFixed(1) %>/5
                    </span>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-4 mt-8">
                    <button class="flex-1 bg-indigo-600 text-white py-3 px-6 rounded-lg hover:bg-indigo-700 transition-colors font-semibold">
                        <i class="fas fa-calendar-check mr-2"></i> Book Now
                    </button>
                
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>